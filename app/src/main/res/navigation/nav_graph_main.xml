<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/toDoList">

    <fragment
        android:id="@+id/toDoList"
        android:name="com.gabriel.personal.projects.todolist.ui.todolist.ToDoListFragment"
        android:label="@string/fragment_label_your_tasks"
        tools:layout="@layout/fragment_to_do_list" >
        <action
            android:id="@+id/action_toDoList_to_addTask"
            app:destination="@id/addTask"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out"
            />
    </fragment>
    <fragment
        android:id="@+id/addTask"
        android:name="com.gabriel.personal.projects.todolist.ui.addtask.AddTask"
        android:label="@string/fragment_label_add_edit_task"
        tools:layout="@layout/fragment_add_task" >
        <argument
            android:name="taskId"
            app:argType="string"
            app:nullable="true"
            />
        <action
            android:id="@+id/action_addTask_to_toDoList"
            app:destination="@id/toDoList"
            />
    </fragment>
</navigation>